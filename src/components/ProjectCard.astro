---
/**
 * ProjectCard Component
 * @description Card visual para mostrar un proyecto open source
 */
interface Props {
  image: string
  imageAlt: string
  title: string
  link: string
  description: string
  status?: string
}

const { image, imageAlt, title, link, description, status } = Astro.props
---

<div class="project-card">
  <img
    src={image}
    alt={imageAlt}
    class="project-card__image"
    loading="lazy"
  />
  <div class="flex-1 flex flex-col gap-3 md:gap-2">
    <h2 class="text-2xl font-bold mb-1">{title}</h2>
    <a href={link} target="_blank" rel="noopener noreferrer" class="underline text-blue-700 dark:text-blue-400 break-all">{link}</a>
    <p>{description}</p>
    {status && <p class="italic text-neutral-600 dark:text-neutral-400 text-sm">{status}</p>}
  </div>
</div>

<style lang="scss">
.project-card {
  min-height: 220px;
  margin-bottom: 0;
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  background: var(--background-color);
  color: var(--foreground-color);
  border-radius: var(--radius-l);
  box-shadow: var(--elevation-2);
  border: 1.5px solid var(--border-color-subtle);
  padding: var(--space-l);
  @media (min-width: 768px) {
    flex-direction: row;
    align-items: center;
    gap: 1.5rem;
  }
}
.project-card__image {
  width: 180px;
  height: 220px;
  min-width: 180px;
  max-width: 180px;
  min-height: 220px;
  max-height: 220px;
  object-fit: cover;
  margin-bottom: 0;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.08);
  border-radius: var(--radius-m);
  border: 1px solid var(--border-color-subtle);
  background: var(--color-neutral-100);
}
.project-card > .flex-1 {
  padding-left: 0.5rem;
  padding-right: 0.5rem;
}
</style> 