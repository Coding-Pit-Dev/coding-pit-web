---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import PageHeader from '@components/PageHeader.astro'
import SocialShares from '@components/SocialShares.astro'
import BreakoutImage from '@components/BreakoutImage.astro'
import { Image } from 'astro:assets'
import { getCollection, render } from 'astro:content'

export async function getStaticPaths() {
  const posts = await getCollection('blog')
  return posts.map((post) => ({
    params: { post: post.id },
    props: { post },
  }))
}

const { post } = Astro.props
const { Content } = await render(post)
const author = {
  name: post.data.author,
  image: post.data.authorImage || "",
  bio: '',
}
---

<DefaultLayout title={post.data.title} description={post.data.description} url={post.id}>
  <PageHeader
    title={post.data.title}
    subtitle={post.data.description}
    author={author}
    bgType="bordered"
    featuredImage={post.data.image}
  />
  <section class="my-12">
    <div class="narrow container">
      <Content />
    </div>
  </section>
  <section class="my-12">
    <div class="narrow space-content container">
      <h2>Share this post</h2>
      <p>Like this post? Share it with your friends!</p>
      <SocialShares />
    </div>
  </section>
</DefaultLayout>

<style is:global>
.narrow.container p {
  margin-bottom: 1.5em;
}
.narrow.container h1 {
  font-size: 2.2rem;
}
.narrow.container h2 {
  font-size: 1.5rem;
}
.narrow.container h3 {
  font-size: 1.2rem;
}
.narrow.container blockquote {
  background: #e6f4ea;
  border-left: 5px solid #1db954;
  color: #222;
  margin: 2em 0;
  padding: 1em 1.5em;
  border-radius: 0.5em;
  font-style: italic;
  font-size: 1.1em;
}
.narrow.container blockquote p {
  margin: 0;
}
</style>
